<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/border_list_view"
    android:orientation="horizontal"
    android:elevation="10dp"
    android:layout_margin="10dp"
    android:padding="10dp"
    >
    <ImageView
        android:id="@+id/imgUser"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/profile1"
        android:padding="5dp"
        android:background="@drawable/circle_border"
        android:layout_alignParentLeft="true"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">
            <ImageView
                android:id="@+id/img_calendar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/calendar2"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/uxTravelDate"
                android:layout_height="40dp"
                android:layout_width="150dp"
                android:textStyle="italic"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:text="Date time"
                android:layout_toRightOf="@id/img_calendar"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/uxSpot"
                android:layout_height="40dp"
                android:layout_width="30dp"
                android:layout_weight="0.5"
                android:textSize="20dp"
                android:textStyle="italic"
                android:text="5"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:layout_margin="5dp"
                android:textColor="@android:color/black"/>
            <ImageView
                android:id="@+id/imgSeats"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toLeftOf="@id/uxSpot"
                android:src="@drawable/group_icon"/>

            <ImageView
                android:id="@+id/img_start"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/img_calendar"
                android:src="@drawable/start_location"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/uxStartPt"
                android:layout_height="40dp"
                android:layout_width="100dp"

                android:textSize="20sp"
                android:layout_margin="5dp"
                android:text="Start Location"
                android:textStyle="bold"
                android:layout_toRightOf="@id/img_start"
                android:layout_below="@id/img_calendar"
                android:textColor="@android:color/black"/>
            <ImageView
                android:id="@+id/img_arrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:paddingTop="10dp"
                android:src="@drawable/arrow2"
                android:layout_toRightOf="@id/uxStartPt"
                android:layout_below="@id/img_calendar"/>



            <TextView
                android:id="@+id/uxEndPt"
                android:layout_height="40dp"
                android:layout_width="100dp"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:text="end Location"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_below="@id/img_calendar"
                android:textColor="@android:color/black"/>
            <ImageView
                android:id="@+id/img_end"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/img_calendar"
                android:layout_toLeftOf="@id/uxEndPt"
                android:src="@drawable/end_location"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"/>

        </RelativeLayout>

    </LinearLayout>







