<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_navigation_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.abiraami.rideshare.NavigationPage"
    tools:showIn="@layout/app_bar_navigation_page">
    <EditText
        android:id="@+id/uxEditStrtPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Starting Point"
        android:gravity="center_horizontal"
        android:layout_below="@id/uxMyToolbar"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/uxEditEndPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Ending Point"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/uxEditStrtPoint"
        android:layout_below="@id/uxMyToolbar"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/uxEditDate"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:hint="Date"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/uxEditEndPoint"/>
    <!--<DatePicker
        android:id="@+id/uxDatePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />
    <TimePicker
        android:id="@+id/uxTimePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TimePicker>
--> <EditText
    android:id="@+id/uxEditNoSpot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="Available Spot"
    android:inputType="number"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="50dp"
    android:layout_toRightOf="@id/uxEditDate"
    android:layout_below="@id/uxEditEndPoint"/>

    <Button
        android:id="@+id/uxBtnPostRide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Ride"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/uxEditNoSpot"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/rideshare1"
        android:layout_below="@id/uxBtnPostRide"
        android:layout_marginTop="40dp"/>
</RelativeLayout>
