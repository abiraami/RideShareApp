<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_display_all_ride"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:background="@android:color/white"
    tools:context="com.example.abiraami.rideshare.DisplayAllRide"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/uxMyToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/myGreenTheme"
        app:title="@string/displayTitle"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
    <!--android:background="?attr/colorPrimary"-->
    <!--android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"-->
    <ListView
        android:id="@+id/uxLVDisplayRides"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_below="@id/uxMyToolbar"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0sp">       <!--
       android:background="@drawable/border_list_view"
       android:divider="#9bc60f"
        android:dividerHeight="2dp"-->
    </ListView>

</LinearLayout>
